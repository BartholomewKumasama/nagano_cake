  <div class="container">
      <div class="row">
          <div class="col-md-6 offset-md-1">
              <h2　class="text-left">商品新規登録</h2>
                <p id="notice"></p>
                  <%= form_with model: @item, url: admins_items_path, method: :post do |item| %>
                    <form>
                        <label for="inputImage">商品画像</label>
                          <%= item.file_field :image, placeholder: "選択されていません", accept: "image/*" %> <!--入力フォームに文字を入れる→placeholder: ""-->
                          <div class="form-group">
                          
                              <%= item.label :商品名 %>
                              <%= item.text_field :name, class: "form-control name", placeholder: "商品名" %>
                          
                              <%= item.label :商品説明 %>
                              <%= item.text_area :introduction, class: "form-control introduction", placeholder: "ここに説明文を記述します" %>

                              <%= item.label :ジャンル %>
                    
                              <%= item.label :税抜価格%>
                              <%= item.text_field :price, class: "form-control price", placeholder: "1000" %>円
                         
                              <%= item.label :販売ステータス %>
                          </div>
                            
                            <!--ジャンルの選択機能コードも追加する-->
                            
                            <%= item.submit "新規登録", class: "btn btn-success" %>
                    </form>
                  <% end %>
          </div>
      </div>
  </div>
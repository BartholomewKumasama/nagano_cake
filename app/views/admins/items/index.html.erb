<h2>商品一覧</h2>
<%= link_to "+", new_admins_item_path, class: "btn-{themecolor}.rounded-circle.p-0" %>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admins_item_path(item) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <!--<td>%= item.is_active %></td>-->   <!--←要編集-->
      </tr>
    <% end %>
  </tbody>
</table>
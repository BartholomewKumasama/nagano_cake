<div class="container">
    <div class="row">
        <div class="col-md-3">
            <table class="table">
                <tr>商品詳細</tr>
                <tr>
                    <% if @item.item_image.attached? %>  <!--Active Storage-->
                     <%= image_tag @item.item_image, size: "100*100" %>
                    <% else %>
                     <%= image_tag "no_image", size: "100*100" %>
                    <% end %>
                </tr>
            </table>
        </div>
        <tbody>
            <tr>
                <td>商品名</td><td><%= @item.name %></td>
            </tr>
            <tr>
                <td>商品説明</td><td><%= @item.introduction %></td>
            </tr>
            <tr>
                <td>ジャンル</td><td><%= @item.genre.name %></td>
            </tr>
            <tr>
                <td>税込価格(税抜価格)</td>
            <td>
            <tr>
                <td>販売ステータス</td>
            <td>
             <%= if @item.is_active %>
             販売中
             <% else %>
             販売中止
             <% end %>
            </td>
            </tr>
            
        </tbody>
            
        </div>
    </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12 shadow p-3 mb-5 bg-white rounded" style="margin-top: 50px; text-align: left;">
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <h2 class="p-3 mb-2 bg-dark text-white text-left">新規会員登録</h2>
      
      <%= render "public/shared/error_messages", resource: resource %>
      
           <table class="table table-hover">
              <tr>
                <th>
                  <%= f.label :氏名 %>
                </th>
                <td>（姓）<br>
                  <%= f.text_field :family_name,:size=>"40" %>
                </td>
                <td>（名）<br>
                  <%= f.text_field :first_name,:size=>"40" %>
                </td>
              </tr>
              <tr>
                <th>
                  <%= f.label :ﾌﾘｶﾞﾅ %>
                </th>
                <td>（ｾｲ）<br>
                  <%= f.text_field :family_name_kana,:size=>"40" %>
                </td>
                <td>（ﾒｲ）<br>
                  <%= f.text_field :first_name_kana,:size=>"40" %>
                </td>
              </tr>
              <tr>
                <th>郵便番号</th>
                <td><%= f.text_field :postal_code,:size=>"40" %></td>
                <td></td>
              </tr>
              <tr>
                <th>住所</th>
                <td colspan="2"><%= f.text_field :address, :size=>"103" %></td>
              </tr>
              <tr>
                <th>電話番号</th>
                <td colspan="2"><%= f.text_field :telephone_number,:size=>"40" %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td colspan="2"><%= f.text_field :email, :size=>"40",autofocus: true, autocomplete: "email" %></td>
              </tr>
              <tr>
                <th>パスワード <% if @minimum_password_length %>
                   <em>(<%= @minimum_password_length %>文字以上)</em>
                  <% end %></th>
                <td colspan="2">
                 
                  <%= f.password_field :password, :size=>"40", autocomplete: "new-password" %>
                </td>
              </tr>
               <tr>
                <th>パスワード（確認用）</th>
                <td colspan="2"><%= f.password_field :password_confirmation, :size=>"40", autocomplete: "new-password" %></td>
              </tr>
            </table>
        
          <div class="actions" style="margin-top: 20px;">
            <button class="btn btn-outline-success btn-lg w-100" type="submit">新規登録</button>
          </div>
        <% end %>
        
        <div class="login" style="margin-top: 60px; margin-bottom: 40px;text-align: center;">
          <h5 class="border-bottom text-left">既に登録済みの方</h5>
          <p><%= render "public/shared/links"%>　からログインしてください</p>
        </div>
      </div>
   </div>
</div>
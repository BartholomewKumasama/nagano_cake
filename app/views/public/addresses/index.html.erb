<div class="addess_index">
    <h1>配送先登録/一覧</h1>
     <%= form_for @address, url: '/public/addresses', method: :post do |f| %>
       <label for="addresse_postal_code">郵便番号(ハイフンなし)</label>
         <%= f.text_field :postal_code %><br>
       <label for="addresse_addresse">住所</label>
         <%= f.text_field :address %><br>
       <label for="addresse_receiver_name">宛名</label>
         <%= f.text_field :name %><br>
     <%= f.submit "新規登録", class: "btn btn-success mr-1" %>
     <% end %>

   <table class="table table-customers">
        <thred>
           <tr>
             <th>郵便番号</th>
             <th>住所</th>
             <th>宛名</th>
             <th></th>
             <th></th>
        　</tr>
        </thred>

        <tbody>
          <% @addresses.each do |address| %>
          <tr>
             <td><%= address.postal_code %></td>
             <td><%= address.address %></td>
             <td><%= address.name %></td>
             <td><%= link_to"編集する", edit_public_address_path(address), class: "btn btn-success mr-1" %></td>
             <td><%= link_to"削除する", public_address_path(address),method: :delete, data: { confirm: "本当に削除しますか？"}, class: "btn btn-danger ml-1" %></td>
           </tr>
           <% end %>
        </tbody>
    </table>
 </div>

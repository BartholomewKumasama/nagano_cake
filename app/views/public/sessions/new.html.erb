<div class="container">
  <div class="row">
    <div class="col-md-2" ></div>
    <div class="col-md-8 shadow p-3 mb-5 bg-white rounded" style="margin-top: 50px; text-align: center;">
      <%= form_with model: @customer, url: new_customer_session_path do |f| %>
      <h2 class="p-3 mb-2 bg-dark text-white text-left">ログイン</h2>
      <h5 class="border-bottom text-left"  style="margin-top: 20px;">会員の方はこちらからログイン</h5>

        <div class="field" style="margin-top: 40px;">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",:size=>"40"  %>
        </div>
      
        <div class="field" style="margin-top: 20px;">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password",:size=>"40"  %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :パスワードを登録する %>
          </div>
        <% end %>

      <div class="actions" style="margin-top: 20px;">
        <button class="btn btn-outline-primary btn-lg w-25" type="submit">ログイン</button>
      </div>
      <% end %>
      <div class="login" style="margin-top: 60px; margin-bottom: 70px;"></div>
        <h5 class="border-bottom text-left">会員登録がお済みでない方</h5>
        <p><%= render "public/shared/links" %>　から新規登録を行ってください</p>
      </div>  
    </div>
    <div class="col-md-2" style="text-align: center; margin-top: 50px;"></div>
  </div>
</div>

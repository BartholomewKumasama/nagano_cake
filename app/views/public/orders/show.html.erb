<div class="container">
<h3 class="border-bottom"><strong>注文履歴詳細</strong></h3>
<div calss="row">
  <div class="d-flex justify-content-start">
    <div class="col-md-6 my-3">
      <h4><strong>注文情報</strong></h4>
    	
  	    <table class="table table-bordered"style="border-width: 2px;">
          <tbody>
              <tr>
                <th class="bg-secondary text-light">注文日</th>
          	    <td class="text-left">
                  <%= @order.created_at.strftime('%Y/%m/%d %H:%M') %>
                </td>
              </tr>
              <tr>
                <th class="bg-secondary text-light">配送先</th>
                <td class="text-left">
                  〒<%= @customer.postal_code %> <br>
                  <%= @customer.address %><br>
                  <%= current_customer.family_name %>
                </td>
              </tr>
              <tr>
                <th class="bg-secondary text-light">支払方法</th>
                <td class="text-left">
                  <%= @order.payment_method %>
                </td>
              </tr>
              <tr>
                <th class="bg-secondary text-light">ステータス</th>
                <td class="text-left">
                  <%= @order.status_i18n %>
                </td>
              </tr>
          </tbody>
        </table>
    </div>

    <div class="col-md-5 offset-md-1 billing my-3">
      <h4><strong>請求情報</strong></h4>
      
        <table class="table  table-bordered "style="border-width: 2px;">
            <tr>
              <th class="bg-secondary text-light">配送料</th>
              <td >
                ¥<%= @order.postage.to_s(:delimited, delimiter: ',') %>
              </td>
            </tr>
            <tr>
              <th class="bg-secondary text-light">商品合計</th>
              <td >
                ¥<%= (@order.billing_amount - @order.postage).to_s(:delimited, delimiter: ',') %>
              </td>
            </tr>
            <tr>
              <th class="bg-secondary text-light">ご請求金額</th>
              <td >
                ¥<%= @order.billing_amount.to_s(:delimited, delimiter: ',') %>
              </td>
            </tr>
        </table>
    </div>
    </div>
    <div class="col-md-12 order-details">
      <h4><strong>注文内容</strong></h4>
    	
        <table class="table table-bordered "style="border-width: 2px;">
          <thead class="bg-secondary text-light">
            <tr>
                <th>商品</th>
                <th>単価(税込)</th>
                <th>個数</th>
                <th>小計</th>
            </tr>
          </thead>
          <tbody>
        	<%@order_details.each do |order_detail| %>
            <tr>
                <td><%= order_detail.item.name %></td>
                <td>¥<%= (order_detail.item.price * 1.1).floor.to_s(:delimited, delimiter: ',') %></td>
                <td><%= order_detail.amount %></td>
                <td>¥<%= ((order_detail.item.price * 1.1).floor * (order_detail.amount)).to_s(:delimited, delimiter: ',') %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
    
</div>
</div>
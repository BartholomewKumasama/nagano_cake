<h4>注文情報確認</h4>

<%= form_with model:@order,url:public_cart_items_path,local:true do |f| %>
 <table>
    <tr>
      <th>商品名</th>
      <th>税込価格</th>
      <th>数量</th>
      <th>小計</th>
      </tr>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
      <td><%= cart_item.amount %></td>
      <td>￥<%= cart_item.subtotal.to_s(:delimited) %></td>
      </tr>
  <% end %>
  </table>
  <table>
    <tr>
      <td>送料</td>
      <td>800</td>
    </tr>
    <tr>
      <% @cart_items.each do |cart_item| %>
      <% @total +=  (cart_item.item.add_tax_price)* cart_item.amount %>
      <% end %>
    </tr>
    <tr>
      <td>請求額</td>
      <td>￥<%= @total + 800 %></td>
    </tr>
  </table>

  <table>
    <tbody>
      <tr>
        <td>支払方法</td>
          <td>
            <% if @order.payment_method == 0 %>
                  クレジットカード
                <% else %>
                  銀行振込
                <% end %>
          </td>
        </tr>
          <td>お届け先</td>
          <td>〒<%= @order.postal_code %><%= @order.address %></br><%= @order.name %></td>
        </tr>
    </tbody>
  </table>

  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <%= f.hidden_field :postal_code, :value => @order.postal_code %>
  <%= f.hidden_field :address, :value => @order.address %>
  <%= f.hidden_field :name, :value => @order.name %>
  <%= f.hidden_field :customer_id, :value => @order.customer_id %>
  <%= f.hidden_field :postage, :value => @order.postage %>
  <%= f.hidden_field :billing_amount, :value => @order.billing_amount %>
  <%= f.submit '注文を確定する', class: "btn btn-success" %>
<% end %>

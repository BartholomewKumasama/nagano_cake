<div class='container'>
  <div class='row'>
    <div class="col-md-12"style="margin-top: 30px;">

<h3>注文履歴一覧</h3>

<table class="table">
       <thead class="table-dark">
    <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
    </tr>
  </thead>

<% @orders.each do |order| %>
<tbody>
    <tr>
        <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
        <td>
          〒<%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
        <td>
          <% order.order_details.each do |order_detail| %>
          <%= order_detail.item.name %><br>
          <% end %>
        </td>
              
        <td><%= order.billing_amount.to_s(:delimited) %>円</td>
        <td><%= order.status_i18n %></td>
        <td><%= link_to "表示する", public_order_path(order.id), class: "btn btn-sm btn-outline-primary w-100" %></td>
    </tr>
</tbody>
<% end %>
</table>

<div><%= link_to "表示する", public_order_path(@orders) %></div>

</div>
</div>
</div>
<div class="container" style="margin-top: 50px;">
  <div class="shadow p-3 mb-5 bg-white rounded">
    <div class="row">
      <div class="col-md-12 " style="text-align: left;  ">
        <h2 class="p-3 mb-2 bg-dark text-white"><strong>注文情報入力</strong></h2>
      </div> 　</div>
    <div class="row">
      <div class="col-md-10 offset-1" style="text-align: center;margin-top:30px; ">
        <h4 class="border-bottom text-left"><strong>支払方法</strong></h4>
        <%= form_with model: @order,url:confirm_public_orders_path,local: true do |f| %>
          <div class="col-md-10 ms-1" style="text-align: left;">
            <%= f.radio_button :payment_method, "credit_card", :checked => true %>
             <%= f.label :payment_method, "クレジットカード", {value: :"0"}  %></br>
              <%= f.radio_button :payment_method, :"transfer" %>
               <%= f.label :payment_method, "銀行振込", {value: :"1"}  %>
          </div>
          <!--↓のエラーで詰まった-->
          <h4 class="border-bottom text-left"><strong>お届け先</strong></h4>
          <div class="col-md-10 ms-1." style="text-align: left;">
            <%= f.radio_button :select_address, :"0",checked: true %>
            <%= f.label :select_address, "ご自身の住所" %> <br> &nbsp;&emsp;
            <%="〒"+ @customer.postal_code %> &nbsp;&emsp;
            <%= @customer.address %> &nbsp;&emsp;
            <%= current_customer.family_name %><br>
            <%= f.radio_button :select_address, :"1"%>
            <%= f.label :select_address, "登録済の住所から選択" %><br> &nbsp;&emsp;
            <%= f.collection_select(:registered, current_customer.addresses.all, :id, :full_address) %><br>
            <%= f.radio_button :select_address,:"2" %>
            <%= f.label :select_address,"新しいお届け先",class: "form-check-label" %> 　　　　</div>
          <table class="table table-borderless table-sm">
            <tr>
              <td style="width: 30%">
                <p class="text-left">&nbsp;&emsp;&emsp;郵便番号(ハイフンなし)</p>
              </td>
              <td>
                <%= f.text_field :postal_code , class:"form-control address_postcode", placeholder: "0000000" %>
              </td>
            </tr>
            <tr>
              <td style="w-30">
                <p class="text-left">&nbsp;&emsp;&emsp;住所</p>
              </td>
              <td>
                <%= f.text_field :address , class:"form-control address_address", placeholder: "東京都渋谷区代々木神園町0-0" %>
              </td>
            </tr>
            <tr>
              <td style="w-30">
                <p class="text-left">&nbsp;&emsp;&emsp;宛名</p>
              </td>
              <td>
                <%= f.text_field :name , class:"form-control address_name", placeholder: "名前くん" %>
              </td>
            </tr>
          </table>
          <%= f.submit "確認画面に進む", class: "btn btn-primary" %>
            <% end %>
      </div>
    </div>
  </div>
</div>

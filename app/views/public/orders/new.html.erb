<h2>注文情報入力</h2>
  <h4><b>支払方法</b></h4>
  <%= form_with model: @order,url: public_orders_confirm_path,method: :post do |f| %>

    <%= f.radio_button :method_of_payment, "credit_card", :checked => true %>
      <%= f.label :method_of_payment, "クレジットカード" %></br>
    <%#= f.radio_button :method_of_payment, Order.method_of_payments.key(1) %><%#調べ中%>
      <%= f.label :method_of_payment, "銀行振込" %>


  <h4><b>お届け先</b></h4>
    <%= f.radio_button :public_addresses,0 %>
      <%= f.label :public_address, "ご自身の住所" %>
      <%#= current_public.address %></br>
      <!--ログインしていないと使えない?-->
      
      <%= f.radio_button :user_address, 1 %>  
      <%= f.label :user_address, "登録済の住所から選択" %>
      <%#= f.select :public_address_id, options_from_collection_for_select(current_public.addresses, :id, :address_display) %></br>
      <!--配送先を登録してから再度修正する-->
  
    <%= f.radio_button :user_address, 2 %>
      <%= f.label :user_address, "新しいお届け先" %><
      郵便番号(ハイフンなし)<%= f.text_field :postal_code %></br>
      住所<%= f.text_field :delivery_address %></br>
      宛名<%= f.text_field :delivery_name %></br>
    <%= f.submit "確認画面へ進む" %>
  
<% end %>

<h2>注文情報入力</h2>
  <h4><b>支払方法</b></h4>
  <%= form_with model: @order,url:confirm_public_orders_path,local: true do |f| %>

    <%= f.radio_button :payment_method, "credit_card", :checked => true %>
      <%= f.label :payment_method, "クレジットカード", {value: :"0"}  %></br>
    <%= f.radio_button :payment_method, :"transfer" %><%#enumの時%>
      <%= f.label :payment_method, "銀行振込", {value: :"1"}  %>

<!--↓のエラーで詰まった-->
  <h4><b>お届け先</b></h4>
  <li>
    <ul>
        <%= f.radio_button :select_address, :"0",checked: true %>ご自身の住所
    </ul>
  </li>
  <li>
    <ui>
      〒<%= @customer.postal_code %> 
          <%= @customer.address %>
          <%= current_customer.family_name %>
    </ui>
  <li> 

 
  <%= f.radio_button :address, :"1"%>
   <%= f.label :public_address, "登録済の住所から選択" %>
  <%#= f.select :address_id, options_from_collection_for_select(@customer.addresses, :id, :address_display),include_blank: "選択して下さい" %>
  <%= f.radio_button :address, :"2" %>新しいお届け先

  <label>郵便番号(ハイフンなし)</label>
  <%= f.text_field :postal_code , class:"form-control address_postcode", placeholder: "0000000" %>
  <label>住所</label>
  <%= f.text_field :address , class:"form-control address_address", placeholder: "東京都渋谷区代々木神園町0-0" %>
  <label>宛名</label>
  <%= f.text_field :name , class:"form-control address_name", placeholder: "名前くん" %>
  <%= f.submit "確認画面に進む", class: "btn btn-primary" %>
<% end %>
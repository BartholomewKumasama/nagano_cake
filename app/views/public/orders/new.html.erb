<div class="container" style="margin-top: 50px;">
 <div class="shadow p-3 mb-5 bg-white rounded">
  <div class="row">
    <div class="col-md-12" style="text-align: left;  ">
        <h2 class="p-3 mb-2 bg-dark text-white">注文情報入力</h2>
    </div>
　</div>
    <div class="row">
        <div class="col-md-12" style="text-align: center;margin-top:30px; ">
            <h4 class="border-bottom text-left">　支払方法</h4>

              <%= form_with model: @order,url:confirm_public_orders_path,local: true do |f| %>
            <div class="col-md-4 offset-md-1"style="text-align: left;">
                <%= f.radio_button :payment_method, "credit_card", :checked => true %>
                  <%= f.label :payment_method, "クレジットカード", {value: :"0"}  %></br>
                <%= f.radio_button :payment_method, :"transfer" %><%#enumの時%>
                  <%= f.label :payment_method, "銀行振込", {value: :"1"}  %>
            </div>
            <!--↓のエラーで詰まった-->
            <h4 class="border-bottom text-left">　お届け先</h4>
            <div class="col-md-11 offset-md-1"style="text-align: left;">
              <table class="table table-borderless">
                <tr>
                  <th><%= f.radio_button :select_address, :"0",checked: true %>ご自身の住所</th>
                  <td> 〒<%= @customer.postal_code %><br />
                  <%= @customer.address %><br />
                  <%= current_customer.family_name %></td>
                  <td></td>
                </tr>
                <tr>
                  <th><%= f.radio_button :address, :"1"%><%= f.label :public_address, "登録済の住所から選択" %></th>
                  <td><%= f.collection_select(:registered, current_customer.addresses.all, :id, :full_address) %></td>
                  <td></td>
                </tr>
                <tr>
                  <th><%= f.radio_button :address, :"2" %>新しいお届け先</th>
                  <td></td>
                  <td></td>
                </tr>
                <tr>
                  <th></th>
                  <td>郵便番号</td>
                  <td> <%= f.text_field :postal_code ,placeholder: "0000000" %></td>
                </tr>
                <tr>
                  <th></th>
                  <td >住所</td>
                  <td><%= f.text_field :address ,placeholder: "東京都渋谷区代々木神園町0-0" ,:size=>"40"%></td>
                </tr>
                <tr>
                  <th></th>
                  <td>宛名</td>
                  <td ><%= f.text_field :name ,placeholder: "名前くん" ,:size=>"40"%></td>
                </tr>
                </table>
                </div>
                <%= f.submit "確認画面に進む", class: "btn btn-primary" %>
              <% end %>
         </div>
       </div>
    </div>
  </div>

<%= form_with model: @customer, url: public_customer_path, method: :patch do |f| %>
<h2>マイページ</h2>

<h4>会員情報編集</h4>

<table class="table table-hover">
  <tr>
    <th>
      <%= f.label :氏名 %>
    </th>
    <td>姓<br>
      <%= f.text_field :family_name %>
    </td>
    <td>名<br>
      <%= f.text_field :first_name %>
    </td>
  </tr>
  <tr>
    <th>
      <%= f.label :ﾌﾘｶﾞﾅ %>
    </th>
    <td>ｾｲ<br>
      <%= f.text_field :family_name_kana %>
    </td>
    <td>ﾒｲ<br>
      <%= f.text_field :first_name_kana %>
    </td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= f.text_field :postal_code %></td>
    <td></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= f.text_field :address, :size=>"40" %></td>
    <td></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= f.text_field :telephone_number %></td>
    <td></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= f.text_field :email, autofocus: true, autocomplete: "email" %></td>
    <td></td>
  </tr>
</table>
  <div class="actions">
    <button class="btn btn-outline-success" type="submit">編集内容を保存する</button>
  </div>
<% end %>


<%= link_to "退会する", unsubscribe_public_customers_path, class: "btn btn-outline-danger" %>
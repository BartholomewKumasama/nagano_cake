<%= form_with model: @customer, url: public_customer_path, method: :patch do |f| %>
<div class="container" style="margin-top: 50px;">
 <div class="shadow p-3 mb-5 bg-white rounded">
  <div class="row">
    <div class="col-md-12" style="text-align: left;">
        <h2 class="p-3 mb-2 bg-dark text-white">マイページ</h2>
    </div>
　</div>
    <div class="row">
        <div class="col-md-12" style="text-align: left;margin-top:20px; ">
            <h4 class="text-left">　会員情報編集</h4>
            <table class="table table-hover">
              <tr>
                <th>
                  <%= f.label :氏名 %>
                </th>
                <td>姓<br>
                  <%= f.text_field :family_name,:size=>"40" %>
                </td>
                <td>名<br>
                  <%= f.text_field :first_name,:size=>"40" %>
                </td>
              </tr>
              <tr>
                <th>
                  <%= f.label :ﾌﾘｶﾞﾅ %>
                </th>
                <td>ｾｲ<br>
                  <%= f.text_field :family_name_kana,:size=>"40" %>
                </td>
                <td>ﾒｲ<br>
                  <%= f.text_field :first_name_kana,:size=>"40" %>
                </td>
              </tr>
              <tr>
                <th>郵便番号</th>
                <td><%= f.text_field :postal_code,:size=>"40" %></td>
                <td></td>
              </tr>
              <tr>
                <th>住所</th>
                <td colspan="2"><%= f.text_field :address, :size=>"103" %></td>
              </tr>
              <tr>
                <th>電話番号</th>
                <td colspan="2"><%= f.text_field :telephone_number,:size=>"40" %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td colspan="2"><%= f.text_field :email, :size=>"40",autofocus: true, autocomplete: "email" %></td>
              </tr>
            </table>
        </div>
    </div>
    <div class="row">
      <div class="col-md-7"style="text-align: left;margin-bottom:20px;margin-top: 30px; margin-bottom: 60px;">
        <div class="actions">
          <button class="btn btn-outline-success w-100" type="submit">編集内容を保存する</button>
        </div>
        <% end %>
      </div>
      <div class="col-md-5"style="text-align: center;margin-top: 30px; margin-bottom: 60px;">
        <%= link_to "退会する", unsubscribe_public_customers_path, class: "btn btn-outline-danger w-50" %>
      </div>
    </div>
  </div>
</div>
  

  




 
 

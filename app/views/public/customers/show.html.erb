<h2>マイページ</h2>

<h4>会員情報　　<%= link_to "編集する", edit_public_customer_path(current_customer), class: "btn btn-outline-success" %></h4>



<table class="table table-bordered ">
        <tr>
          <th bgcolor="#f0f0f0">氏名</th>
          <td><%= @customer.family_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
            <th bgcolor="#f0f0f0">ﾌﾘｶﾞﾅ</th>
            <td><%= @customer.family_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
            <th bgcolor="#f0f0f0">郵便番号</th>
            <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
            <th bgcolor="#f0f0f0">住所</th>
            <td><%= @customer.address %></td>
        </tr>
        <tr>
            <th bgcolor="#f0f0f0">電話番号</th>
            <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
            <th bgcolor="#f0f0f0">メールアドレス</th>
            <td><%= @customer.email %></td>
        </tr>
</table>        

<h4>配送先　　　<%= link_to "一覧を見る", public_orders_path(current_customer), class: "btn btn-outline-primary" %></h4>

<h4>注文履歴　　<%= link_to "一覧を見る", public_addresses_path(current_customer), class: "btn btn-outline-primary" %></h4>


<div class="container" style="margin-top: 50px;">
 <div class="shadow p-3 mb-5 bg-white rounded">
  <div class="row">
    <div class="col-md-12" style="text-align: left;  ">
        <h2 class="p-3 mb-2 bg-dark text-white">マイページ</h2>
    </div>
　</div>
    <div class="row">
        <div class="col-md-12" style="text-align: center;margin-top:30px; ">
            <h4 class="border-bottom text-left">　注文情報</h4>
            <br />
            <h4>注文履歴：　<%= link_to "一覧を見る", public_addresses_path(current_customer), class: "btn btn-outline-primary w-50" %></h4>
            <br />
            <h4>配送先　：　<%= link_to "一覧を見る", public_orders_path(current_customer), class: "btn btn-outline-primary w-50" %></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" style="text-align: center;margin-top:30px;margin-bottom:30px;">
            <h4 class="border-bottom text-left">　会員情報</h4>
            <table class="table table-borderless">
                    <tr>
                      <th style="w-30">氏名</th>
                      <td><%= @customer.family_name %> <%= @customer.first_name %></td>
                    </tr>
                    <tr>
                        <th style="w-30">ﾌﾘｶﾞﾅ</th>
                        <td><%= @customer.family_name_kana %> <%= @customer.first_name_kana %></td>
                    </tr>
                    <tr>
                        <th style="w-30">郵便番号</th>
                        <td><%= @customer.postal_code %></td>
                    </tr>
                    <tr>
                        <th style="w-30">住所</th>
                        <td><%= @customer.address %></td>
                    </tr>
                    <tr>
                        <th style="w-30">電話番号</th>
                        <td><%= @customer.telephone_number %></td>
                    </tr>
                    <tr>
                        <th style="w-30">メールアドレス</th>
                        <td><%= @customer.email %></td>
                    </tr>
            </table> 
            <%= link_to "編集する", edit_public_customer_path(current_customer), class: "btn btn-outline-success w-75" %>
        </div>
    </div>
  </div>
</div>

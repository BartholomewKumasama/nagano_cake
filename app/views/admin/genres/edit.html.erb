<div class="row">
  <div class="col-md">
    <h2>ジャンル編集</h2>
     <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
      <div class="table">
        <tr>
         <td>
          <label for="name">ジャンル名</label>
         </td>
         <td>
          <%= f.text_field :name, class: "form-control" %>
         </td>
         <td>
          <%= link_to "変更を保存", admin_genres_path(@item), class: 'btn btn-secondary' %>
         </td>
        </tr>
      </div>
    <% end %>
  </div>
</div> 
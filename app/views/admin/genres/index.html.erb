<div class="row">
 <div class="col-md-8">
  <table class="table">
   <thead>
    <h2>ジャンル一覧・追加</h2><br>
  </thead>
  <tbody>
     <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
       <label for="name">ジャンル名</label><br>
         <%= f.text_field :name, class:"form-control" %>
       <%= f.submit '新規登録', class:"btn btn-success" %>
  </tbody>
  </table>
 </div>
</div>
<% end %>
<br>

<!--二段に切り替える-->

<div class="row ">
<div class="col-md-6">

  <table class = "table">
    <thead>
      <tr class="active">
        <th>ジャンル</th>
        <th></th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id) ,class: "btn btn-success" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
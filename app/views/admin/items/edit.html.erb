<div class="row">
  <div class="col-md-6 offset-md-1">
    <h2>商品編集</h2>
    
  </div>
</div>


<%= form_with model:@item, url: admins_item_path, method: :patch do |item| %>
  <div class="form-group">
    <%= f.label :商品画像 %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.label :商品名 %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :商品説明 %>
    <%= f.text_area :introduction %>
  </div>
  <div class="form-group">
    <%= f.label :ジャンル %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name,{prompt: "選択してください"} %> <!-- ジャンル未作成 -->
  </div>
  <div class="form-group">
    <%= f.label :税抜価格 %>
    <%= f.text_field :price %>
  </div>
  <div class="form-group">
    <%= f.label :販売ステータス %>
    <!--%= f.radio_button :is_active, Item.is_active.key(0) %>-->
    <!--%= f.label :is_active, Item.is_active[:sale] %>-->
    <!--%= f.radio_button :is_active, Item.is_active.key(1) %>-->
    <!--%= f.label :is_active, Item.is_active[:stop_selling] %>-->
  </div>
  <div class="form-group">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>
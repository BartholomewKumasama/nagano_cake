<div class="conteiner">
  <div class:"row">
    <h2>商品詳細</h2>
    <%= image_tag @item.image, size: "200x200" %>
    <table>
      <tr>
        <th>商品名</th>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <th>ジャンル</th>

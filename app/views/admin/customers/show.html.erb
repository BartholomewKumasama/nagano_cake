<div class="container" style="margin-top: 50px;">
  <div class="col-md-8 offset-md-2"> <%#.offset-md-1 は .col-md-9 を 1 カラムぶん右に移動%>
<div class="shadow p-3 mb-5 bg-white rounded">
    
    

  <table class="table">
    <thead>
      <h2 class="p-3 mb-2 bg-dark text-white">会員詳細</h2>
    </thead>

    <tbody>
      <tr><td>会員ID</td><td><%= @customer.id %></td></tr>

      <tr><td>氏名</td><td><%= @customer.family_name %> <%= @customer.first_name %></td></tr>

      <tr><td>フリガナ</td><td><%= @customer.family_name_kana %> <%= @customer.first_name_kana %></td></tr>

      <tr><td>郵便番号</td><td><%= @customer.postal_code %></td></tr>

      <tr><td>住所</td><td><%= @customer.address %></td></tr>

      <tr><td>電話番号</td><td><%= @customer.telephone_number %></td></tr>

      <tr><td>メールアドレス</td><td><%= @customer.email %></td></tr>

      <tr><td>
        会員ステータス
        </td><td>
        <% if @customer.is_deleted %><%# is_deletedの情報を取得して退会済みかチェック %>
        <b class="text-secondary">退会</b>  <%# true(退会済み)の時の表示 %>
        <% else %>
        <b class="text-success">有効</b>  <%# false(初期値)の時の表示 %>
        <% end %>
      </td></tr>
    </tbody>
  </table>
  

 　 &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp; <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: "btn btn-outline-success" %>
 

    &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;<%= link_to "注文履歴一覧を見る", admin_order_history_path(@customer), class: "btn btn-outline-success" %>


  </div>
</div>